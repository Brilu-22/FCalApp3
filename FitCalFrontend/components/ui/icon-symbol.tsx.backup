import { Text, StyleSheet } from 'react-native';

export function IconSymbol({ name, size = 24 }: { name: string; size?: number }) {
  return (
    <Text style={[styles.icon, { fontSize: size }]}>
      {name}
    </Text>
  );
}

const styles = StyleSheet.create({
  icon: {
    fontFamily: 'System',
    fontWeight: 'bold',
  },
});